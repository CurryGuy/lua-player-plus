TARGET = LuaPlayerPlus

LUA_OBJS = LuaPlayer.o LuaGraphics.o LuaControls.o Lua3d.o LuaMath.o LuaAdhoc.o LuaWlan.o LuaTimer.o LuaSound.o \
           LuaSystem.o LoadLib.o LuaZip.o LuaBattery.o kernelfunctions.o net.o browser.o UmdRip.o

VIDEO_OBJS = sceMpeg.o

ARCHIVES_OBJ = Archives.o

OBJS = $(LUA_OBJS) $(ARCHIVES_OBJ) $(VIDEO_OBJS) Main.o

CFLAGS = -O3 -frename-registers -ffast-math -fomit-frame-pointer -G0 -Wall -g
CXXFLAGS = $(CFLAGS) -fno-exceptions -fno-rtti
ASFLAGS = $(CFLAGS)

LIBDIR =

LDFLAGS =

LIBS = -lpsphbc -losl -lpspusbdevice -lpspkubridge -lmikmod -lmmio -ljpeg -lpng -lUnrar -lz -llua -lpspgum -lpspsdk -lpspctrl -lpspumd -lpsprtc \
       -lpsppower -lpspgu -lpspaudiolib -lpspaudio -lm -lpspmpeg -lpspaudiocodec -lfreetype -lpsprtc -lz -lstdc++ \
	   -lpspmp3 -lmad -lvorbisidec -lpspatrac3 -lpspusb -lpspusbstor -lpsphttp -lpspssl -lpspwlan -lpspnet_adhocmatching \
	   -lpspnet_adhoc -lpspnet_adhocctl -lpsputility -lcurl -lpsphprm_driver -lpspsystemctrl_user -lpspumd \
	   -lpspsystemctrl_kernel -lpspaudio_driver -lpspopenpsid -lmp4ff -lpspmpegbase -lglut -lGLU -lGL -lpsphprm \
	   -lpspgum_vfpu -lpspvfpu -lpspmath

BUILD_PRX = 1
PSP_FW_VERSION = 371
PSP_LARGE_MEMORY = 1

EXTRA_TARGETS = EBOOT.PBP
PSP_EBOOT_TITLE = Lua Player Plus
PSP_EBOOT_ICON  = EBOOT/ICON0.PNG

PSPSDK=$(shell psp-config --pspsdk-path)
include $(PSPSDK)/lib/build.mak

Main.o: Boot.cpp KernelFunctions.cpp Extralibs.cpp
LuaGraphics.o: Vera.cpp VeraMono.cpp
LuaSystem.o: mpeg_vsh370.cpp


